//css

body {
  background-color: grey;
}
.calculator {
    width: 300px;
    margin: 50px auto;
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    background:black;
  border-radius:15px;
}

.calculator input[type="text"] {
    width: 100%;
    margin-bottom: 10px;
    padding:20px;
    box-sizing: border-box;
   border-radius:16px;
}

.buttons {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 5px;
}

